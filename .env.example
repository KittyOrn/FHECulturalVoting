# ============================================================
# Private Keys and Wallet Configuration
# ============================================================
# WARNING: NEVER commit actual private keys to version control
# Use environment-specific .env files that are gitignored

# Deployer private key (required for deployment)
PRIVATE_KEY=your_wallet_private_key_here

# Pauser role private key (for emergency pause functionality)
PAUSER_PRIVATE_KEY=your_pauser_wallet_private_key_here

# Admin role private key (for administrative functions)
ADMIN_PRIVATE_KEY=your_admin_wallet_private_key_here

# ============================================================
# Network Configuration - Sepolia Testnet
# ============================================================

# Sepolia RPC URL - public endpoint
SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Alternative Sepolia RPC endpoints (choose one):
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_api_key
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_api_key
# SEPOLIA_RPC_URL=https://sepolia.gateway.tenderly.co

# ============================================================
# Network Configuration - Zama fhEVM
# ============================================================

# Zama fhEVM devnet RPC URL (for FHE operations)
ZAMA_RPC_URL=https://devnet.zama.ai

# ============================================================
# Block Explorer and Verification
# ============================================================

# Etherscan API key for contract verification
# Get your API key from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ============================================================
# Gas Reporting and Optimization
# ============================================================

# Enable gas reporting (true/false)
REPORT_GAS=false

# CoinMarketCap API key for USD gas price conversion
# Get your API key from: https://pro.coinmarketcap.com/account
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# ============================================================
# Testing and Development
# ============================================================

# Enable verbose logging during tests (true/false)
VERBOSE_LOGGING=false

# Test timeout in milliseconds
TEST_TIMEOUT=40000

# ============================================================
# Security Configuration
# ============================================================

# Enable security checks in CI/CD (true/false)
ENABLE_SECURITY_CHECKS=true

# Audit level for npm audit (low, moderate, high, critical)
AUDIT_LEVEL=moderate

# ============================================================
# Performance and Optimization
# ============================================================

# Solidity optimizer runs (200-10000)
# Higher = more gas efficient at runtime, longer compile time
OPTIMIZER_RUNS=800

# Enable Yul optimizer (true/false)
ENABLE_YUL_OPTIMIZER=true

# ============================================================
# CI/CD Configuration
# ============================================================

# Codecov token for coverage reporting
# Get from: https://codecov.io
CODECOV_TOKEN=your_codecov_token_here

# GitHub token for automated workflows
GITHUB_TOKEN=your_github_token_here

# ============================================================
# Monitoring and Alerts
# ============================================================

# Deployment notification webhook URL (Slack, Discord, etc.)
NOTIFICATION_WEBHOOK_URL=your_webhook_url_here

# Enable deployment notifications (true/false)
ENABLE_NOTIFICATIONS=false

# ============================================================
# Role Addresses (for production deployment)
# ============================================================

# Address to be granted pauser role
PAUSER_ADDRESS=0x0000000000000000000000000000000000000000

# Address to be granted admin role
ADMIN_ADDRESS=0x0000000000000000000000000000000000000000

# Address to be granted voter authorization role
VOTER_AUTHORIZER_ADDRESS=0x0000000000000000000000000000000000000000
