#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running pre-commit checks..."

# Run linters
echo "Checking Solidity code quality..."
npm run lint:sol || {
  echo "Solidity linting failed. Please fix the errors before committing."
  exit 1
}

echo "Checking JavaScript code quality..."
npm run lint:js || {
  echo "JavaScript linting failed. Please fix the errors before committing."
  exit 1
}

# Check code formatting
echo "Checking code formatting..."
npm run format:check || {
  echo "Code formatting check failed. Run 'npm run format' to fix."
  exit 1
}

# Run tests
echo "Running tests..."
npm test || {
  echo "Tests failed. Please fix failing tests before committing."
  exit 1
}

echo "All pre-commit checks passed!"
